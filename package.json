{
  "name": "solidityscan-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SolidityScan smart contract security analysis",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "solidityscan-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx index.ts",
    "start:http": "node dist/server-http.js",
    "dev:http": "tsx server-http.ts",
    "prepare": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop solidityscan-mcp-server",
    "pm2:restart": "pm2 restart solidityscan-mcp-server",
    "pm2:logs": "pm2 logs solidityscan-mcp-server",
    "docker:build": "docker build -t solidityscan-mcp-server .",
    "docker:run": "docker run -d --name solidityscan-mcp -p 8080:8080 --restart unless-stopped solidityscan-mcp-server",
    "swarm:deploy": "docker stack deploy -c docker-stack.yml solidityscan-mcp",
    "swarm:rm": "docker stack rm solidityscan-mcp",
    "swarm:services": "docker stack services solidityscan-mcp",
    "swarm:ps": "docker stack ps solidityscan-mcp",
    "swarm:logs": "docker service logs -f solidityscan-mcp_solidityscan-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "solidityscan": "0.2.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "solidity",
    "security",
    "smart-contracts",
    "blockchain"
  ],
  "author": "iamkunal9",
  "license": "MIT"
}